<Page x:Class="Sunum.Sayfalarİki.HashtagPostSayfalari.MainHPS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sunum.Sayfalarİki.HashtagPostSayfalari"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainHPS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="Gray" >
            <Button x:Name="btnhashtagpost" Content="Hashtag Takipçi Çekme" Height="40" FontSize="20" Margin="3,3" BorderThickness="0" Foreground="DarkOrange" FontWeight="DemiBold" />
            <Button x:Name="btnhashtagpostyorum" Content="Hashtag Yorum Atma" Height="40" FontSize="20" Margin="2,3" BorderThickness="0"  Foreground="DarkOrange" FontWeight="DemiBold"  />
        </StackPanel>
        <Frame x:Name="frmmhp" Grid.Row="1" NavigationUIVisibility="Hidden" Source="\Sayfalarİki\HashtagPostSayfalari\HashtagPost.xaml"/>
    </Grid>
</Page>
